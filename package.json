{
    "name": "serial2keypress",
    "version": "1.0.1",
    "description": "Reads serialport and simulates keypresses",
    "repository": {
        "url": "https://bitbucket.org/spinaldev/serial2keypress"
    },
    "main": "main.js",
    "codeName": "s2keypress",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder build",
        "rebuild": "electron-rebuild"
    },
    "build": {
        "appId": "s2keypress.digilogika",
        "productName": "Serial2Keypress",
        "asar": true,
        "directories": {
            "output": "dist"
        },
        "win": {
            "publish": [
                {
                    "provider": "generic",
                    "url": "http://latest.spinaldev.com/serial2keypress/"
                },
                {
                    "provider": "github"
                }
            ]
        },
        "nsis": {
            "oneClick": true,
            "shortcutName": "Serial2Keypress",
            "artifactName": "S2keypress.Setup.${version}.${ext}"
        }
    },
    "keywords": [
        "electron",
        "digilogika",
        "keypress",
        "serialport"
    ],
    "author": "Toomas Jaska",
    "license": "UNLICENSED",
    "devDependencies": {
        "electron": "^11.0.3",
        "electron-builder": "^22.1.0",
        "electron-rebuild": "^2.3.2"
    },
    "dependencies": {
        "electron-dl": "^1.14.0",
        "electron-json-config": "^1.5.3",
        "electron-log": "^3.0.8",
        "electron-updater": "^4.2.0",
        "mousetrap": "^1.6.5",
        "sendkeys": "^1.1.1",
        "serialport": "^8.0.6"
    }
}
