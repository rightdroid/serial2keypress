{
    "name": "kkeskus-e09",
    "version": "1.1.5",
    "description": "Karjäärikeskus kiosk app",
    "main": "main.js",
    "codeName": "e09",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder build"
    },
    "build": {
        "appId": "kkeskus.spinaldev",
        "productName": "Karjäärikeskus Kiosk",
        "asar": true,
        "directories": {
            "output": "dist"
        },
        "win": {
            "publish": [
                {
                    "provider": "generic",
                    "url": "http://latest.spinaldev.com/kkeskus/e09/"
                },
                {
                    "provider": "github"
                }
            ]
        },
        "nsis": {
            "oneClick": true,
            "shortcutName": "Karjäärikeskus Kiosk",
            "artifactName": "KKeskusKiosk-e09.Setup.${version}.${ext}"
        }
    },
    "keywords": [
        "electron",
        "kiosk",
        "spinaldev"
    ],
    "author": "Spinal Developments",
    "license": "copyrighted",
    "devDependencies": {
        "electron": "^7.1.8",
        "electron-builder": "^22.1.0"
    },
    "dependencies": {
        "electron-dl": "^1.14.0",
        "electron-json-config": "^1.5.3",
        "electron-log": "^3.0.8",
        "electron-updater": "^4.2.0",
        "mousetrap": "^1.6.5"
    }
}
